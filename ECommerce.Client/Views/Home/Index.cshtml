@{
    ViewData["Title"] = "Home Page";
}

@model IList<ECommerce.Shared.ProductVm>

@await Component.InvokeAsync("Category")

<head>
    <link rel="stylesheet" href="~/css/IndexStyle.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/JavaScript.js"></script>
</head>

<div class="container main-bg">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="padding-top:5px;">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/imgs/botw_wall.jpg" alt="First slide" style="height:400px;">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/imgs/ffxv_wallpaper.png" alt="Second slide" style="height:400px;">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/imgs/capsule_616x353.jpg" alt="Third slide" style="height:400px;">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="title-block">
        <p>Trending Games</p>
        <button id="all">View All</button>
    </div>
    <div class="row list">
        @foreach (var product in Model)
        {
            <div class="col-3 item">
                <a class="cover-img" asp-controller="Product" asp-action="Detail" asp-route-id="@product.ProductId">
                    <p class="card-brand">@product.BrandId</p>
                    <img class="card-img" src="@product.Images" alt="Caption" />
                    <p class="card-price">@product.Price$</p>
                </a>
                <br />
                <br />
                <p class="card-title">@product.ProductName</p>

            </div>
        }
    </div>
    <button id="next">View More</button>
</div>

