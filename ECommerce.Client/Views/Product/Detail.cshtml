@model ECommerce.Shared.ProductVm

<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <img src="@Model.Images" alt="Card image cap">
        </div>

        <div class="col-sm-5">
            <h4>@Model.ProductName</h4>
            <hr style="width:100%;text-align:left;margin-left:0">
            <p>@Model.Description</p>
            <h5 style="color:red">Price: @Model.Price</h5>
            <button type="button" class="btn btn-danger">Order</button>
        </div>
    </div>
</div>